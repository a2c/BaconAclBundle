<input name="group_id" value="{{ group.id }}" type="hidden">
{% for module in modules %}

    {% if loop.first  %}
        <div class="row">
    {% endif %}

    {% if loop.first != true and loop.index%4 == 0 %}
        </div>
        <div class="row">
    {% endif %}

    <div class="col-lg-4">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">{{ module.name }}</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    {{ bacon_acl_actions(module, group) }}
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>

    {% if loop.last %}
        </div>
    {% endif  %}
{% endfor %}
